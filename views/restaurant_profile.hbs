<div class="inner-wrapper" id="restaurant-profile">
    <div class="restaurant-profile-header">
        <img align="left" class="restaurant-image-lg" src="../assets/customer-header-img.jpg" alt="Profile image example"/>
        <img align="left" class="restaurant-image-profile thumbnail" src="../assets/r-pfp.jpg" alt="Profile image example"/>
        <div class="restaurant-profile-text">
            <h1>
                  {{restaurant.displayname}}
            </h1>
        </div>
    </div>

<div class="restaurant-profile-content">
<ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview" role="tab" aria-controls="overview" aria-selected="true">Overview</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="menu-tab" data-toggle="tab" href="#menu" role="tab" aria-controls="menu" aria-selected="false">Menu</a>
  </li>
 <!-- <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#review" role="tab" aria-controls="review" aria-selected="false">Ratings and Reviews</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="messages-tab" data-toggle="tab" href="#order" role="tab" aria-controls="order" aria-selected="false">Order</a>
  </li> -->
</ul>

<div class="restaurant-profile-pane tab-content">
  <div class="tab-pane active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
    <div class="overview-container">
      <div>
        <p>
          {{restaurant.bio}}
        </p>
        <hr>
        <h4>Details</h4> 
        <h6 class="restaurant-category">Category/Cuisine</h6>
             <p>{{restaurant.category}}</p>
        <h6>Operating Hours</h6>

        {{#if restaurant.storehours}}
          <p style="color:#38B6FF">{{restaurant.storehours}}</p>
          {{else}}
            <p>N/A</p>
        {{/if}}
        <h6>Address</h6>
        <p>
              {{restaurant.location}}
        </p>
        <h6>Contact</h6>
        <p>
              {{restaurant.contactno}}
        </p>
        {{#if own}}
          <div class="my-lg-0 inverted-color-button">
            <button class="btn btn-outline go-edit-RProfile" type="button">Edit Profile</button>
          </div> 
        {{/if}}
      </div>
    </div>
  </div>
  <div class="tab-pane" id="menu" role="tabpanel" aria-labelledby="menu-tab">
    <div class="menu-container">
      {{#if own}}
        <button type="button" class="btn btn-primary btn-lg btn-block go-menu-edit" id="go-menu-edit"  style="background:#38B6FF; border-color:#38B6FF; font-weight:bolder; color:#FFDE59">Edit Menu</button>
      {{/if}}
      
      <div class="menu-list ">
        {{#if menu}}
          {{#each menu}}
            {{>menu_item product = this}}
          {{/each}}
        {{else}}
          <h1>Menu still empty</h1>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="tab-pane" id="review" role="tabpanel" aria-labelledby="review-tab">
    <div class="menu-container">
      <div class="menu-list ">
        <h1> Hello </h1>
      </div>
    </div>
  </div>
  <div class="tab-pane" id="order" role="tabpanel" aria-labelledby="order-tab">Order
    

  </div>
</div>

</div>


</div> 