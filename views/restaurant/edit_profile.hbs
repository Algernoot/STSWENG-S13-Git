<div class="inner-wrapper" id="restaurant-edit-profile">
  <h1>{{name}} - Edit Profile</h1>
  <div class="padded-container">
    <div class="" id="">
        
           
  <form method="POST" onsubmit="return updateRestoProfile()"  name="updateRProfile">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="resto-name">Restaurant Name</label>
      <input type="text" class="form-control" id="resto-name" name="restaurant-names" value="{{restaurant.displayname}}">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="resto-desc">Description</label>
      <textarea id="resto-desc" name="resto-desc" maxlength="255" class="form-control" aria-label="With textarea" 
          style="resize: none;"  >{{restaurant.bio}}</textarea>
    </div> 
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="resto-street">Street Address</label>
      <input type="text" class="form-control" id="resto-street" value="">
    </div>
    <div class="form-group col-md-2">
      <label for="city">City</label>
      <input type="text" class="form-control" id="resto-city" value="">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-2">
        <label  for="resto-open-hour">Open Time</label>
        <input type="time" class="form-control" id="resto-open-hour">
    </div>
     
    <div class="form-group col-md-2">
        <label  for="resto-open-hour">Close Time</label>
        <input type="time" class="form-control" id="resto-close-hour" value="">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="resto-category">Category</label>
      <input class="form-control" list="categories" name="resto-category" id="resto-category" maxlength="255" value="{{restaurant.category}}">
        <datalist id="categories">
          <option value="Fine Dining">
          <option value="Casual Dining">
          <option value="Contemporary Casual">
          <option value="Family Style">
          <option value="Fast Casual">
          <option value="Fast Food">
          <option value="Cafe">
          <option value="Buffet">
        </datalist>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="resto-contact">Contact Number</label>
      <input type="number" class="form-control" id="resto-contact" name="resto-contact" placeholder="Contact-Number" max="99999999999">
    </div>
  </div>

        <button type="submit" class="btn btn-primary save-RProfile"  style="background:#38B6FF; border-color:#38B6FF; font-weight:bolder; color:#FFDE59">
          Save Changes
        </button>
</form>   
               <button  class="btn btn-primary cancel-Restaurant"  style="background:#969696;  font-weight:bolder; color:#fffdfd">
           Cancel
        </button>
    
    </div>
  </div>

    <h1>Security</h1>
  <div class="padded-container">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#changePW-modal" >
          Change Password
        </button>
  </div>
</div>  


<div class="modal fade" id="changePW-modal"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="padding:10px">
              <h5>Change Password</h5>
              <form method="POST" onsubmit="return updatePassword()" name="changePW" style="margin-bottom: 0;">
                <div class="form-group">
                  <label for="new-item-name">New Password</label>
                  <input type="password" class="form-control" id="new-password" name="new-password" placeholder="New Password" maxlength="60" >
                </div>
                <div class="form-group">
                  <label for="c-new-password">Confirm Password</label>
                  <input type="password" class="form-control" id="c-new-password" name="c-new-password" placeholder="Confirm Password" maxlength="60" >
                </div>
                <p id="changePW-error" class="error">  </p>
                <div class="row" style="padding: 10px;">
                        <div class="col-sm-6" align="left">
                            <div>
                                <button class="btn btn-primary"  type="submit">Save</button>
                            </div>
                        </div>
                </form>


                         <div class="col-sm-6" align="right">
                            <div>
                                <button class="btn btn-primary color-button-g" data-dismiss="modal" style="border-color:#969696; background:#969696;  font-weight:bolder; color:#fffdfd">Cancel</button>
                            </div>
                        </div>
              </div>  
            </div>
        </div>

